{
  "expo": {
    "name": "Recrate",
    "slug": "recrate",
    "version": "1.1.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "scheme": "recrate",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#1a1a1a"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.recrate.app",
      "buildNumber": "3",
      "infoPlist": {
        "NSCameraUsageDescription": "Recrate needs camera access to scan QR codes for connecting to your server.",
        "NSLocalNetworkUsageDescription": "Recrate needs local network access to connect to your music server on your home network and via Tailscale VPN.",
        "NSLocationWhenInUseUsageDescription": "Recrate uses location to help discover your music server on the local network.",
        "NSBonjourServices": [
          "_http._tcp"
        ],
        "NSAppTransportSecurity": {
          "NSAllowsArbitraryLoads": true,
          "NSAllowsLocalNetworking": true
        },
        "UIBackgroundModes": [
          "audio"
        ]
      },
      "entitlements": {
        "com.apple.developer.networking.vpn.api": [
          "allow-vpn"
        ],
        "com.apple.developer.networking.networkextension": [
          "app-proxy-provider",
          "packet-tunnel-provider"
        ],
        "com.apple.developer.networking.multipath": true
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#1a1a1a"
      },
      "permissions": [
        "CAMERA",
        "FOREGROUND_SERVICE",
        "WAKE_LOCK"
      ],
      "edgeToEdgeEnabled": true,
      "package": "com.recrate.app"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "99558d9b-96b2-4206-963e-38a26a0bb971"
      }
    },
    "owner": "djnewage",
    "plugins": [
      "expo-secure-store"
    ]
  }
}
