{
  "name": "@recrate/desktop",
  "version": "1.0.4",
  "description": "Recrate Desktop - Electron app for managing Serato library",
  "main": "main.js",
  "scripts": {
    "dev": "electron .",
    "start": "electron .",
    "prebuild": "node scripts/bundle-server.js",
    "prebuild:mac": "node scripts/bundle-server.js",
    "prebuild:win": "node scripts/bundle-server.js",
    "prebuild:linux": "node scripts/bundle-server.js",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "generate-icons": "node scripts/generate-icons.js",
    "kill-server": "lsof -ti :3000 | xargs kill -9 || echo 'No server running on port 3000'"
  },
  "dependencies": {
    "@recrate/server": "*",
    "@recrate/shared": "*",
    "electron-log": "^5.0.0",
    "electron-store": "^8.1.0",
    "qrcode": "^1.5.3",
    "uuid": "^9.0.1",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@electron/notarize": "^3.1.1",
    "electron": "27.0.0",
    "electron-builder": "^24.6.4",
    "sharp": "^0.34.5"
  },
  "build": {
    "appId": "com.recrate.desktop",
    "afterSign": "scripts/notarize.js",
    "productName": "Recrate",
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "src/**/*",
      "assets/**/*",
      "resources/**/*"
    ],
    "mac": {
      "category": "public.app-category.music",
      "icon": "assets/icons/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "notarize": false,
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "icon": "assets/icons/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "assets/icons/icon.ico",
      "uninstallerIcon": "assets/icons/icon.ico"
    },
    "linux": {
      "icon": "assets/icons/icon.png",
      "category": "Audio",
      "maintainer": "Tristan Sacotte <tristan@recrate.app>",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "extraResources": [
      {
        "from": "server-bundle",
        "to": "server",
        "filter": [
          "**/*"
        ]
      }
    ]
  },
  "author": {
    "name": "Tristan Sacotte",
    "email": "tristan@recrate.app"
  },
  "homepage": "https://github.com/djnewage/Recrate",
  "license": "MIT"
}
